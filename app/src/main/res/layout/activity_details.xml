<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="8dp"
    tools:context=".view.DetailsActivity">


    <TextView
        android:id="@+id/text_label_participacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Você vai Participar?"
        android:textSize="25dp"

        />

    <View
        android:id="@+id/view_separador"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_label_participacao"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:padding="250dp"
        />

    <CheckBox
        android:id="@+id/check_participate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_separador"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Você vai Participar?"
        android:textSize="28sp" />

</RelativeLayout>